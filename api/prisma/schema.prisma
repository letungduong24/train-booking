generator client {
  provider     = "prisma-client"
  output       = "../src/generated/"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// User

model User {
  id            String         @id @default(uuid())
  profilePic    String?
  email         String         @unique
  password      String
  name          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  refreshTokens RefreshToken[]
  role          String @default("user")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

// Station

model Station {
  id         String   @id @default(uuid())
  name       String
  latitute   Float
  longtitute Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  routes RouteStation[]
}

model Route {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stations  RouteStation[]
  status    String @default("draft")
}

model RouteStation {
  routeId           String
  stationId         String
  index             Int
  distanceFromStart Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@id([routeId, index])
  route Route @relation(fields: [routeId], references: [id], onDelete: Cascade)
  station Station @relation(fields: [stationId], references: [id], onDelete: Cascade)
}

// Train
model CoachTemplate {
  id          String      @id @default(uuid())
  code        String      @unique
  name        String      
  description String?
  layout      CoachLayout 
  totalRows   Int         
  totalCols   Int         
  tiers       Int         @default(1)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  coaches     Coach[]
}

enum CoachLayout {
  SEAT   
  BED  
}

model Train {
  id        String   @id @default(uuid())
  code      String   @unique 
  name      String   
  status    String   @default("ACTIVE") 
  coaches   Coach[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Coach {
  id         String        @id @default(uuid())
  name       String        
  order      Int           
  status     String        @default("ACTIVE")
  trainId    String
  train      Train         @relation(fields: [trainId], references: [id], onDelete: Cascade)
  templateId String
  template   CoachTemplate @relation(fields: [templateId], references: [id])
  
  seats      Seat[]
  
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([trainId, order]) 
}

model Seat {
  id        String     @id @default(uuid())
  name      String     
  rowIndex  Int      
  colIndex  Int      
  status    SeatStatus @default(AVAILABLE)
  type      SeatType   @default(STANDARD) 
  coachId   String
  coach     Coach      @relation(fields: [coachId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  @@unique([coachId, rowIndex, colIndex]) 
}

enum SeatStatus {
  AVAILABLE 
  BOOKED   
  LOCKED   
  DISABLED 
}

enum SeatType {
  VIP     
  STANDARD  
  ECONOMY  
  OTHER
}